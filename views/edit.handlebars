<div class="container">
  <form action="/records/edit/{{_id}}?_method=PUT" method="POST">
    <div class="mb-3">
      <label for="name" class="form-label">名稱:<span
          class="text-danger"
        >*</span></label>
      <input
        type="text"
        class="form-control"
        id="name"
        placeholder="Enter name"
        name="name"
        value="{{name}}"
        required
      />
    </div>
    <div class="mb-3">
      <label for="date" class="form-label">日期:<span
          class="text-danger"
        >*</span></label>
      <input
        type="date"
        class="form-control"
        id="date"
        placeholder="Enter Date"
        name="date"
        value="{{date}}"
        required
      />
    </div>
    <div class="mb-3">
      <label for="category" class="form-label">類別:<span
          class="text-danger"
        >*</span></label>
      <select
      name="categoryId"
      id="selectedCategory"
      class="form-control"
      aria-label="select by category"
      required
    >
      <option selected disabled value="">選擇類別</option>
      {{#each categories}}
        {{#if ../categoryId}}
          <option value="{{this._id}}" {{#compare this._id ../categoryId}}selected{{/compare}}>{{this.name}}</option>
        {{else}}
          <option value="{{this._id}}">{{this.name}}</option>
        {{/if}}
      {{/each}}
    </select>
    </div>
    <div class="mb-3">
      <label for="amount" class="form-label">金額:<span
          class="text-danger"
        >*</span></label>
      <input
        type="text"
        class="form-control"
        id="amount"
        name="amount"
        value="{{amount}}"
        required
      />
    </div>

    <div class="text-center">
      <button type="submit" class="btn btn-primary">
        送出
      </button>
      <a href="/">
        <button type="button" class="btn btn-outline-secondary">
          返回首頁
        </button>
      </a>
      <button type="reset" class="btn btn-outline-danger">重新輸入</button>
    </div>
  </form>
</div>